@model InternalAuditSystem.Models.EntityModels.Users

@{
    /**/

    ViewBag.Title = "Добавить пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Pagetitle = "Добавить пользователя";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!DOCTYPE html>
    <html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>@ViewBag.Title</title>
        <!-- vendor css -->
        <link href="../../Scripts/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link href="../../Scripts/lib/Ionicons/css/ionicons.css" rel="stylesheet">
        <link href="../../Scripts/lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
        <link href="../../Scripts/lib/highlightjs/github.css" rel="stylesheet">
        <link href="../../Scripts/lib/select2/css/select2.min.css" rel="stylesheet">
        <link rel="stylesheet" href="../../Content/katniss.css">
    </head>

    <body>
        <div class="kt-breadcrumb">
            <nav class="breadcrumb">
                <a class="breadcrumb-item" href="../News/Index">Главная страница</a>
                <a class="breadcrumb-item" href="Index">Пользователи</a>
                <span class="breadcrumb-item active">@ViewBag.Title</span>
            </nav>
        </div><!-- kt-breadcrumb -->
        <div class="kt-mainpanel">
            <div class="kt-pagetitle">
                <h5>@ViewBag.Pagetitle</h5>
            </div> @*kt-pagetitle*@
            <div class="kt-pagebody">
                <div class="card pd-20 pd-sm-40">
                    <h6 class="card-body-title">Добавьте нового пользователя, заполнив представленные ниже поля.</h6>
                    <p class="mg-b-20 mg-sm-b-30">Поля, отмеченные <span class="tx-danger">*</span>, обязательны к заполнению</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-layout">
                        <div class="row mg-b-25">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">Фамилия: <span class="tx-danger">*</span></label>
                                    @Html.EditorFor(model => model.UserLastName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserLastName, "", new { @class = "text-danger" })
                                </div>
                            </div><!-- col-8 -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">Имя: <span class="tx-danger">*</span></label>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">Отчество: </label>
                                    @Html.EditorFor(model => model.UserMiddleName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserMiddleName, "", new { @class = "text-danger" })
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">Email: <span class="tx-danger">*</span></label>
                                    @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                                </div>
                            </div><!-- col-8 -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">Телефон: <span class="tx-danger">*</span></label>
                                    @Html.EditorFor(model => model.UserPhone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserPhone, "", new { @class = "text-danger" })
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-lg-4">
                                <div class="form-group mg-b-10-force">
                                    <label class="form-control-label">Роль: <span class="tx-danger">*</span></label>
                                    @Html.DropDownListFor(model => model.RoleId, ViewBag.RoleList as SelectList, new { @class = "form-control select 2" })
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-lg-8">
                                <div class="form-group mg-b-10-force">
                                    <label class="form-control-label">Подразделение: <span class="tx-danger">*</span></label>                                    
                                    @Html.DropDownListFor(model => model.SubdivisionId, ViewBag.SubdivisionList as SelectList, new { @class = "form-control select 2" })
                                </div>
                            </div><!-- col-8 -->
                        </div><!-- row -->
                        <div class="form-layout-footer">
                            <input type="submit" value="Добавить" class="btn btn-default mg-r-5" />
                            <input type="reset" value="Назад" class="btn btn-secondary" />
                        </div><!-- form-layout-footer -->
                    </div><!-- form-layout -->
                </div><!-- card -->

            </div>
            <div class="kt-footer">
                <span> &copy; TPU - 2018 </span>
            </div><!-- kt-footer -->
        </div>

        <script src="../../Scripts/lib/jquery/jquery.js"></script>
        <script src="../../Scripts/lib/popper.js/popper.js"></script>
        <script src="../../Scripts/lib/bootstrap/bootstrap.js"></script>
        <script src="../../Scripts/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.js"></script>
        <script src="../../Scripts/lib/moment/moment.js"></script>
        <script src="../../Scripts/lib/highlightjs/highlight.pack.js"></script>
        <script src="../../Scripts/lib/select2/js/select2.min.js"></script>
        <script src="../../Scripts/lib/parsleyjs/parsley.js"></script>


        <script src="../../Scripts/js/katniss.js"></script>
        <script>
          $(function(){
            'use strict';
            $('.select2').select2({
              minimumResultsForSearch: Infinity
            });

            $('#selectForm').parsley();
          })
        </script>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </body>
</html>
}