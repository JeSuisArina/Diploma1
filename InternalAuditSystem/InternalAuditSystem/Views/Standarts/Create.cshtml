@model InternalAuditSystem.Models.EntityModels.Standarts

@{
    ViewBag.Title = "Добавить стандарт";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Pagetitle = "Добавить стандарт";
}
@using (Html.BeginForm())
{
    <!DOCTYPE html>
    <html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>@ViewBag.Title</title>
        <!-- vendor css -->
        <link href="../../Scripts/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link href="../../Scripts/lib/Ionicons/css/ionicons.css" rel="stylesheet">
        <link href="../../Scripts/lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
        <link href="../../Scripts/lib/highlightjs/github.css" rel="stylesheet">
        <link rel="stylesheet" href="../../Content/katniss.css">
    </head>

    <body>
        <div class="kt-breadcrumb">
            <nav class="breadcrumb">
                <a class="breadcrumb-item" href="../News/Index">Главная страница</a>
                <a class="breadcrumb-item" href="Index">Стандарты</a>
                <span class="breadcrumb-item active">Добавить стандарт</span>
            </nav>
        </div><!-- kt-breadcrumb -->
        <div class="kt-mainpanel">
            <div class="kt-pagetitle">
                <h5>@ViewBag.Pagetitle</h5>
            </div> @*kt-pagetitle*@
            <div class="kt-pagebody">

                @Html.AntiForgeryToken()

                <div class="control-label col-md-2">
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        Идентификатор стандарта
                        @Html.EditorFor(model => model.StandartId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StandartId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        Название стандарта
                        @Html.EditorFor(model => model.StandartName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StandartName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        Описание
                        @Html.EditorFor(model => model.StandartDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StandartDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        Описание
                        @Html.EditorFor(model => model.StandartFile, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StandartFile, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Добавить" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <div class="kt-footer">
                <span> &copy; TPU - 2018 </span>
            </div><!-- kt-footer -->
        </div>


        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </body>
</html>
}
