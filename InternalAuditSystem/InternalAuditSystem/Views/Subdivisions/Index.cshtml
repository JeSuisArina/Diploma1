@model IEnumerable<InternalAuditSystem.Models.Subdivision>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Подразделения";
    ViewBag.Pagetitle = "Подразделения";
    ViewBag.Pass = "Главная страница";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewBag.Title</title>
    <!-- vendor css -->
    <link href="../../Katniss/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="../../Katniss/lib/Ionicons/css/ionicons.css" rel="stylesheet">
    <link href="../../Katniss/lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link href="../../Katniss/lib/highlightjs/github.css" rel="stylesheet">
    <link rel="stylesheet" href="../../Content/katniss.css">
</head>

<body>
    <div class="kt-mainpanel">
        <div class="kt-pagebody">
            <div class="card pd-20 pd-sm-40">
                <h6 class="card-body-title">Подразделения</h6>
                <p class="mg-b-20 mg-sm-b-30">Using the most basic table markup.</p>
                <p>
                    @Html.ActionLink("Добавить подразделение", "Create")
                </p>
                <div class="table-responsive">
                    <table class="table mg-b-0">
                        <thead>
                            <tr>
                                <th>
                                    <label class="ckbox mg-b-0">
                                        <input type="checkbox"><span></span>
                                    </label>
                                </th>
                                <th>@Html.DisplayNameFor(model => model.SubdivisionName)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <label class="ckbox mg-b-0">
                                            <input type="checkbox"><span></span>
                                        </label>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubdivisionName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.SubdivisionId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.SubdivisionId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.SubdivisionId })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="kt-footer">
            <span> &copy; TPU - @DateTime.Now.Year </span>
        </div><!-- kt-footer -->
    </div>


    <script src="../../Scripts/lib/jquery/jquery.js"></script>
    <script src="../../Scripts/lib/popper.js/popper.js"></script>
    <script src="../../Scripts/lib/bootstrap/bootstrap.js"></script>
    <script src="../../Scripts/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.js"></script>
    <script src="../../Scripts/lib/moment/moment.js"></script>
    <script src="../../Scripts/lib/highlightjs/highlight.pack.js"></script>
    <script src="../../Scripts/js/katniss.js"></script>
</body>
</html>
