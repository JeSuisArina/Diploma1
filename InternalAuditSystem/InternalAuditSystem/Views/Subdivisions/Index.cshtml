@model IEnumerable<InternalAuditSystem.Models.EntityModels.Subdivisions>

@{

                Layout = "~/Views/Shared/_Layout.cshtml";
                ViewBag.Title = "Подразделения";
                ViewBag.Pagetitle = "Подразделения";
                ViewBag.Pass = "Главная страница";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewBag.Title</title>
    <!-- vendor css -->
    <link href="../../Scripts/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="../../Scripts/lib/Ionicons/css/ionicons.css" rel="stylesheet">
    <link href="../../Scripts/lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link href="../../Scripts/lib/highlightjs/github.css" rel="stylesheet">
    <link rel="stylesheet" href="../../Content/katniss.css">
</head>

<body>
    <div class="kt-breadcrumb">
        <nav class="breadcrumb">
            <a class="breadcrumb-item" href="index.html">Главная страница</a>
            <span class="breadcrumb-item active">Сотрудники</span>
        </nav>
    </div><!-- kt-breadcrumb -->
    <div class="kt-mainpanel">
        <div class="kt-pagetitle">
            <h5>@ViewBag.Pagetitle</h5>
        </div> @*kt-pagetitle*@
        <div class="kt-pagebody">
            <div class="card pd-20 pd-sm-40">
                <p class="mg-b-20 mg-sm-b-30">Список подразделений и отделов Томского Политехничесткого Университета.</p>
                <p>
                    <a href="../Subdivisions/Create" style="font-size: 24px"><i class="icon ion-ios-plus-outline"></i></a>
                </p>
                <div class="table-responsive">
                    <table class="table mg-b-0">
                        <thead>
                            <tr>
                                <th>
                                    <label class="ckbox mg-b-0">
                                    </label>
                                </th>
                                <th class="wd-65p">Название подразделения</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <label class="ckbox mg-b-0">
                                    </label>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SubdivisionName)
                                </td>
                                <td>
                                    @Html.ActionLink("Просмотреть сертификаты", "Details", new { id = item.SubdivisionId })
                                </td>
                                    @* @Html.ActionLink("Details", "Details", new { id = item.SubdivisionId }) |*@
                                <td>
                                    @Html.ActionLink("Удалить подразделение", "Delete", new { id = item.SubdivisionId })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="kt-footer">
            <span> &copy; TPU - @DateTime.Now.Year </span>
        </div><!-- kt-footer -->
    </div>


    <script src="../../Scripts/lib/jquery/jquery.js"></script>
    <script src="../../Scripts/lib/popper.js/popper.js"></script>
    <script src="../../Scripts/lib/bootstrap/bootstrap.js"></script>
    <script src="../../Scripts/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.js"></script>
    <script src="../../Scripts/lib/moment/moment.js"></script>
    <script src="../../Scripts/lib/highlightjs/highlight.pack.js"></script>
    <script src="../../Scripts/js/katniss.js"></script>
</body>
</html>
