@model InternalAuditSystem.Models.EntityModels.Subdivisions

@{
    ViewBag.Title = "Удалить подразделение";
    ViewBag.Pagetitle = "Удалить подразделение";
}

@using (Html.BeginForm())
{
    <!DOCTYPE html>
    <html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>@ViewBag.Title</title>
        <!-- vendor css -->
        <link href="../../Scripts/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link href="../../Scripts/lib/Ionicons/css/ionicons.css" rel="stylesheet">
        <link href="../../Scripts/lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
        <link href="../../Scripts/lib/highlightjs/github.css" rel="stylesheet">
        <link rel="stylesheet" href="../../Content/katniss.css">
    </head>

    <body>
        <div class="kt-breadcrumb">
            <nav class="breadcrumb">
                <a class="breadcrumb-item" href="../News/Index">Главная страница</a>
                <a class="breadcrumb-item" href="Index">Подразделения</a>
                <span class="breadcrumb-item active">Удалить подразделение</span>
            </nav>
        </div><!-- kt-breadcrumb -->
        <div class="kt-mainpanel">
            <div class="kt-pagetitle">
                <h5>@ViewBag.Pagetitle</h5>
            </div> @*kt-pagetitle*@
            <div class="kt-pagebody">

                @Html.AntiForgeryToken()

                <div class="control-label col-md-2">
                    Вы уверены, что ходите удалить "@Html.DisplayFor(model => model.SubdivisionName)" ?
                </div>              

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Удалить" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <div class="kt-footer">
                <span> &copy; TPU - 2018 </span>
            </div><!-- kt-footer -->
        </div>       

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </body>
</html>
}

