@model InternalAuditSystem.Models.EntityModels.Applications

@{
    ViewBag.Title = "Изменить статус заявки";
    ViewBag.Pagetitle = "Изменить статус заявки";

}

@using (Html.BeginForm("Edit", "Applications", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <!DOCTYPE html>
    <html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>@ViewBag.Title</title>
        <!-- vendor css -->
        <link href="../../Scripts/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link href="../../Scripts/lib/Ionicons/css/ionicons.css" rel="stylesheet">
        <link href="../../Scripts/lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
        <link href="../../Scripts/lib/highlightjs/github.css" rel="stylesheet">
        <link href="../../Scripts/lib/medium-editor/medium-editor.css" rel="stylesheet">
        <link href="../../Scripts/lib/medium-editor/default.css" rel="stylesheet">
        <link href="../../Scripts/lib/summernote/summernote-bs4.css" rel="stylesheet">
        <link rel="stylesheet" href="../../Content/katniss.css">
    </head>

    <body>
        <div class="kt-breadcrumb">
            <nav class="breadcrumb">
                <a class="breadcrumb-item" href="../News/Index">Главная страница</a>
                <a class="breadcrumb-item" href="../Applications/Index">Заявки</a>
                <span class="breadcrumb-item active">Изменить статус заявки</span>
            </nav>
        </div><!-- kt-breadcrumb -->
        <div class="kt-mainpanel">
            <div class="kt-pagetitle">
                <h5>@ViewBag.Pagetitle</h5>
            </div> @*kt-pagetitle*@
            <div class="kt-pagebody">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-6 col-lg-6 mg-t-30 mg-md-t-0">
                        <label class="content-left-label">Изменение статуса заявки</label>
                        <div class="card bg-gray-200 bd-0">
                            <div class="edit-profile-form">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label class="form-control-label">Статус заявки: <span class="tx-danger">*</span></label>
                                        @Html.DropDownListFor(model => model.ApplicationStatusId, ViewBag.StatusList as SelectList, new { @class = "form-control select 2" })
                                    </div>
                                </div>                                
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Принять" class="btn btn-default mg-r-5" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>                                           
                </div>
                <div class="kt-footer">
                    <span> &copy; TPU - 2018 </span>
                </div><!-- kt-footer -->
            </div>
        </div>

        <script src="../../Scripts/lib/jquery/jquery.js"></script>
        <script src="../../Scripts/lib/popper.js/popper.js"></script>
        <script src="../../Scripts/lib/bootstrap/bootstrap.js"></script>
        <script src="../../Scripts/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.js"></script>
        <script src="../../Scripts/lib/moment/moment.js"></script>
        <script src="../../Scripts/lib/highlightjs/highlight.pack.js"></script>
        <script src="../../Scripts/lib/medium-editor/medium-editor.js"></script>
        <script src="../../Scripts/lib/summernote/summernote-bs4.min.js"></script>


        <script src="../../Scripts/js/katniss.js"></script>
        <script>
            $(function () {
                var editor = new MediumEditor('.editable');
            });
        </script>

    </body>
</html>
}